[Unit]
Description=ZEE AI Assistant Service
After=sound.target pulseaudio.service

[Service]
Type=simple
User=%i
Environment="DISPLAY=:0"
Environment="XAUTHORITY=/home/%i/.Xauthority"
Environment="PULSE_SERVER=/run/user/1000/pulse/native"
WorkingDirectory=/home/%i/ZEE
ExecStart=/home/%i/ZEE/venv/bin/python /home/%i/ZEE/zee_service.py
Restart=on-failure
RestartSec=10

[Install]
WantedBy=default.target
